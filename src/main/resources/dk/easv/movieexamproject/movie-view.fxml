<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="dk.easv.movieexamproject.MovieController">
    <BorderPane>

        <!-- Left Pane (Filters) -->
        <left>
            <VBox spacing="10" alignment="TOP_LEFT" style="-fx-padding: 10;">
                <Label text="Filters" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <HBox spacing="5">
                    <TextField promptText="Search for title" fx:id="searchField" />
                    <Button text="Search" fx:id="btnSearch" />
                    <Button text="Clear" fx:id="btnClear" />
                </HBox>

                <VBox spacing="5" fx:id="vBoxCategory">
                    <Label text="Category" />
                    <CheckBox text="Action" fx:id="cbAction" />
                    <CheckBox text="Comedy" fx:id="cbComedy" />
                    <CheckBox text="Horror" fx:id="cbHorror" />
                </VBox>

                <VBox spacing="5" fx:id="vBoxRating">
                    <Label text="IMDB Minimum Rating" />
                    <RadioButton fx:id="radio2" text="2" />
                    <RadioButton fx:id="radio3" text="3" />
                    <RadioButton fx:id="radio4" text="4" />
                    <RadioButton fx:id="radio5" text="5" />
                    <RadioButton fx:id="radio6" text="6" />
                    <RadioButton fx:id="radio7" text="7" />
                    <RadioButton fx:id="radio8" text="8" />
                    <RadioButton fx:id="radio9" text="9" />
                </VBox>
            </VBox>
        </left>

        <!-- Center Pane (Table) -->
        <center>
            <VBox spacing="10" style="-fx-padding: 10;">
                <TableView fx:id="moviesTable" style="-fx-focus-color: transparent;">
                    <columns>
                        <TableColumn fx:id="clmPlay" prefWidth="40" />
                        <TableColumn text="Title" fx:id="clmTitle" prefWidth="200" />
                        <TableColumn text="IMDB Rating" fx:id="clmImdb" prefWidth="100" />
                        <TableColumn text="User Rating" fx:id="clmUserRating" prefWidth="100" />
                        <TableColumn text="Categories" fx:id="clmCategories" prefWidth="200" />
                        <TableColumn text="Last View" fx:id="clmLastView" prefWidth="150" />
                        <TableColumn fx:id="clmControl" prefWidth="100" />
                    </columns>
                </TableView>

                <!-- Buttons below table -->
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Add Movie" fx:id="btnAddMovie" />
                    <Button text="Add Category" fx:id="btnAddCategory" />
                    <Button text="Delete Category" fx:id="btnDeleteCategory" />
                    <Button text="Close" fx:id="btnClose" />
                </HBox>
            </VBox>
        </center>

    </BorderPane>
</StackPane>
